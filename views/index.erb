<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Links</title>
  </head>
  <body>
    <p><% @links.each do |link| %></p>
    <li id="link-<%= link.id %>">
      <h2><%= link.title %></h2>
      <p><%= link.url %></p>
      <form action="/delete_link" method="post">
        <input type="hidden" name="id" value="<%= link.id %>" >
        <input type="submit" value="delete">
      </form>

      <form action="/edit_link/<%= link.id %>">
        <input type="submit" value="edit">
      </form>
    </li>
    <% end %>
  </body>
  <form action="/add_link" method="post">
    <input type="text" name="new_title" placeholder="title">
    <input type="text" name="new_link" placeholder="url">
    <input type="submit" value="Add Bookmark">
  </form>
</html>
